{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "checkJs": true,
        "declaration": true,
        "declarationMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "jsx": "react-jsxdev",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "strict": true,
        "outDir": ".",
        "module": "ESNext",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "sourceMap": false,
        "target": "ESNext"
    },
    "include": [
        "server.ts"
    ],
    "exclude": [
        "dist",
        "src/**/*.ts[x]?"
    ],
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}