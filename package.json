{
    "name": "vite-ssr-vanilla",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "nodemon --watch src/app/main --watch src/app/main.ts --exec tsx src/app/main.ts",
        "build": "npm run clean:dist && npm run build:client && npm run build:server",
        "build:client": "vite build --outDir dist/client",
        "build:server": "npm run build:server:main && npm run build:server:entry && npm run build:server:api",
        "build:server:main": "tsc -p tsconfig.server.json",
        "build:server:entry": "vite build --ssr src/app/entries/server.ts --outDir dist/server",
        "build:server:api": "vite build --ssr src/app/entries/api.ts --outDir dist/apis",
        "preview": "cross-env NODE_ENV=production node dist/app/main",
        "clean": "npm run clean:dist && npm run clean:npm",
        "clean:dist": "rimraf dist",
        "clean:npm": "rimraf node_modules"
    },
    "dependencies": {
        "compression": "^1.8.1",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "sirv": "^3.0.2"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/express": "^5.0.6",
        "@types/node": "^24.10.7",
        "cross-env": "^10.1.0",
        "nodemon": "^3.1.11",
        "rimraf": "^6.1.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "~5.9.3",
        "vite": "^7.2.7"
    }
}